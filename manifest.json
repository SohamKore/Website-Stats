{
    "manifest_version": 2,
    "name": "Website Stats Extension",
    "version": "1.0",
      "permissions": ["activeTab"],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["https://www.similarweb.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  